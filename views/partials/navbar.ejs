        <li class="nav-item">
          <a class="nav-link"  href="/campgrounds">Campgrounds</a>
        </li>
        <% if(currentUser) {%>
          <li>
            <a href="/bookmarks"  class="nav-link">Bookmarks</a>
          </li>
          <% } %>

            <li>
              <a href="/campgrounds/new"  class="nav-link">New campground</a>
            </li>
