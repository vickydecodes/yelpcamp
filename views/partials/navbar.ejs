            </li>
            <% } %>
        </ul>
       </div>
    </div>
    
  </div>
</nav>
<script>
  let lastScrollTop = 0;
  const navbar1 = document.querySelector('.navbar');
  const shadowClass = 'shadow-lg';
  const scrollThreshold = 50; // Change this to your desired scroll threshold

  window.addEventListener('scroll', function() {
      let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (scrollTop > lastScrollTop && scrollTop > scrollThreshold) {
          // Scrolling down and beyond the threshold
          navbar1.classList.add(shadowClass);
      } else if (scrollTop < lastScrollTop && scrollTop < scrollThreshold) {
          // Scrolling up and below the threshold
          navbar1.classList.remove(shadowClass);
      }
      lastScrollTop = scrollTop;
  });
</script>