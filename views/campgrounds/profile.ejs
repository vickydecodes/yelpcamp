<% layout('layouts/boilerplate') -%>




<div class="container">
    <center>
        <img src="<%= user.profile.url %>" style="border-radius: 50%; object-fit: cover;" height="250" width="250" alt="">
      </center>
    <br>

            <form action="/profile?_method=PUT" class="row g-3 formvalid" method="POST" novalidate enctype="multipart/form-data">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="col-12">
                            <label for="inputEmail4" class="form-label">Name</label>
                            <input type="text" name="user[name]" class="form-control" 
                                value="<%= user.name %>" required>
                        </div><br>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Profile Picture</label>
                            <input class="form-control" required autocomplete="off" type="file" id="image" name="avatar">
                          </div>
                        <br>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Mobile Number</label>
                            <input type="text" name="user[mobile]" class="form-control" 
                                value="<%= user.mobile %>" required>
                        </div><br>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
<% if(campgrounds.length > 0) {%>
  <h3>Your Campgrounds</h3>
  <% } %>
    <div class="p-2">
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="<%= campground.images[0].url %>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8 d-flex">
                  <div class="card-body d-flex flex-column p-0">
                    <div class="p-2">
                      <h5 class="card-title"><a href="https://www.google.com/search?q=<%= campground.title %>" style="text-decoration: none;"><%= campground.title %></a></h5>
                    <p class="card-text">   <%= campground.description %></p>
                    </div>
                    <div class="card-footer mt-auto d-flex align-items-center">
                      <a class="btn btn-primary " href="campgrounds/<%= campground.id %>">View Location</a>
                      <a class="card-link btn btn-info ms-2" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                      <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                          <button class="btn btn-danger mx-2">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
           
                
           
            <% } %>
    </div>
</div>    



